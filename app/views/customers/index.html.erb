<p id="notice"><%= notice %></p>
<br>
<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sobrenome</th>
      <th>Cpf</th>
      <th>Data nascimento</th>
      <th>Telefone</th>
      <th>Cortes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.nome %></td>
        <td><%= customer.sobrenome %></td>
        <td><%= customer.cpf %></td>
        <td><%= customer.data_nascimento %></td>
        <td><%= customer.telefone %></td>
        <td><%= customer.attendances.count %></td>
        <td><%= link_to 'Show', customer, class:'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class:'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="text-center">
  <%= link_to 'Novo Cliente', new_customer_path, class:'btn btn-primary' %>
</div>